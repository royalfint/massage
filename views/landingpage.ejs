<html>
<head>
    <title><%= title %> - Главная</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/resp.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,700" rel="stylesheet">
</head>
<body>
    <div class="wrap fixed" id="blackout">
        <div class="topmenu">
            <div class="brand"><a href="#hero"><%= title %></a></div>
            <div class="menu">
                <a href="#girls">Девушки</a>
                <a href="#services">Услуги</a>
                <a href="#interior">Интерьер</a>
                <a href="#about">О Нас</a>
                <a href="#offers">Акции</a>
                <a href="#contacts">Контакты</a>
            </div>
            <div class="yummy">
                <div id="menu-toggle">
                    <div id="hamburger">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                    <div id="cross">
                        <span></span>
                        <span></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="overlay">
        <div style="display: flex; flex-direction: column;">
            <a href="#girls" onclick="yummy();">Девушки</a>
            <a href="#services" onclick="yummy();">Услуги</a>
            <a href="#interior" onclick="yummy();">Интерьер</a>
            <a href="#about" onclick="yummy();">О Нас</a>
            <a href="#offers" onclick="yummy();">Акции</a>
            <a href="#contacts" onclick="yummy();">Контакты</a>
        </div>
    </div>

    <div class="hero section" id="hero">
        <div class="wrap">
            <div>
                <h1 class="gold"><%= profile.desc %></h1>
                <h3><%= profile.subdesc %></h3>
                <a href="#contacts" class="btn">круто! куда подъехать?</a>
            </div>
        </div>
        <div class="anchor">
            <a href="#girls"><img src="svg/anchor.svg"></a>
        </div>
    </div>

    <div class="girls section" id="girls">
        <div class="wrap">
            <div>
                <h2 class="gold"><%= profile.girlsTitle %></h2>
                <h3><%= profile.girlsSub %></h3>
                <div class="girlsGrid">
                    <% girls.forEach(function(girl){ %>
                        <div>
                            <img src="<%= girl.image[0] %>">
                            <p class="name gold"><%= girl.name %></p>
                            <p class="name desc">Грудь <%= girl.boobs %>, Рост <%= girl.height %>, Вес <%= girl.weight %> </p>
                            <div class="buttonRow">
                                <a href="#" class="btn">Записаться</a>
                                <a href="#" class="btn more">Еще</a>
                            </div>
                        </div>
                    <% }); %>
                </div>
                <a href="/girls" class="btn show">Показать всех</a>
            </div>
        </div>
    </div>

    <div class="service section" id="services">
        <div class="wrap">
            <div>
                <h2 class="gold"><%= profile.serviceTitle %></h2>
                <h3><%= profile.serviceSub %></h3>
                <div class="programs">
                    <% var i = 0; services.forEach(function(service){ %>
                        <% if (i%2 != 0) { %>
                            <div style="clip-path: polygon(0 0, 100% 0, 75% 100%, 0 100%); background: url(<%= service.image[0] %>) center/cover no-repeat;">
                        <% } else { %>
                            <div style="clip-path: polygon(25% 0, 100% 0, 100% 100%, 0 100%); background: url(<%= service.image[0] %>) center/cover no-repeat; left: 15rem;">
                        <% } %>
                            <h4 class="gold"><%= service.name %></h4>
                            <p><%= service.desc %></p>
                        </div>
                    <% i++; }); %>
                </div>
                <a href="/services" class="btn show">Показать все</a>
            </div>
        </div>
    </div>

    <div class="apps section" id="interior">
        <div class="wrap">
            <div>
                <h2 class="gold"><%= profile.appartsTitle %></h2>
                <h3><%= profile.appartsSub %></h3>
                <div class="appsGrid">
                    <% var i = 0; apparts.forEach(function(app){ %>
                        <% if(i%2 != 0) { %> <div> <% } else { %> <div class="revers"> <% } %>
                            <% if(i%2 != 0) { %> <img src="<%= app.image[0] %>"> <% } %>
                        <% if(i%2 != 0) { %> <div> <% } else { %> <div class="reverse"> <% } %>
                                <h4 class="gold">Комната "<%= app.name %>"</h4>
                                <p><%= app.desc %></p>
                                <a href="#" class="btn">Посетить</a>
                            </div>
                            <% if(i%2 == 0) { %> <img src="<%= app.image[0] %>"> <% } %>
                        </div>
                    <% i++; }); %>
                </div>
                <a href="#" class="btn show">Показать все</a>
            </div>
        </div>
    </div>

    <div class="about section" id="about">
        <div class="wrap">
            <div>
                <h2 class="gold"><%= profile.aboutTitle %></h2>
                <h3><%= profile.aboutSub %></h3>
                <div class="quote">
                    <img src="img/beardman.png">
                    <div>
                        <p><%= profile.aboutText %></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="offers section" id="offers">
        <div class="wrap">
            <div>
                <h2 class="gold"><%= profile.dealsTitle %></h2>
                <h3><%= profile.dealsSub %></h3>
                <div class="offerblock">
                    <% deals.forEach(function(deal){ %>
                        <div>
                            <h4 class="gold"><%= deal.name %></h4>
                            <ul>
                                <li><%= deal.desc %></li>
                            </ul>
                            <img src="<%= deal.image[0] %>" alt="">
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>

    <div class="contacts section" id="contacts">
        <h2 class="gold"><%= profile.contactsTitle %></h2>
        <h3><%= profile.contactsSub %></h3>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2503.563775624998!2d71.42080119451197!3d51.13495393913761!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x424586a3b81fc6ed%3A0x2a05d6c5a59a0241!2sSarayshyq+St+5%D0%B3%2C+Astana+020000!5e0!3m2!1sen!2skz!4v1534912454871"
            frameborder="0" style="border:0"></iframe>
        <div class="callback">
            <h3><%= profile.contactsText %></h3>
            <a class="btn" href="#">Позвони мне</a>
        </div>
    </div>

<% include landingfooter %>
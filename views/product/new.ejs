                <label for="secondfile" class="new">
                    <img class="add" src="../svg/plus.svg">
                    <img class="added" src="../svg/added.svg">
                </label>
                <input class="filetype" id="secondfile" type="file" name="secondfile" />
            </div>
            <div>
                <label for="thirdfile" class="new">
                    <img class="add" src="../svg/plus.svg">
                    <img class="added" src="../svg/added.svg">

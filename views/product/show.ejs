<% include ../partials/header %>

<div class="centered">
    <div class="showroom">
        <!--div class="main" style="background: url() center/cover no-repeat;"></div-->
        <div style="position: relative; display: flex; flex-direction: column;">
            <a class="next" onclick="next()">
                <img src="../svg/right.svg">
            </a>
            <a class="prev" onclick="prev()">
                <img src="../svg/left.svg">
            </a>
            <div id="myslider" class="main" data-simple-slider>
                <% product.image.forEach(function(img) { %>
                    <img src="../<%= img %>"/>
                <% }); %>
            </div>
            
            <div class="small-slides">
                <% var index = 0; %>
                <% product.image.forEach(function(img) { %>
                    <div>
                        <img src="../<%= img %>" onclick="setSlide(<%= index %>);">
                    </div>
                <% index++; }); %>
            </div>
        </div>
        <div class="showdesc">
            <h1><%= product.name %></h1>
            <p>Цена: <%= product.price %>₸</p>
            <p>Категория: Штаны</p>
            <p>Продавец: <a href="/seller/<%= product.author.username %>"><%= product.author.username %></a></p>
            <p>Адрес: <%= product.author.id.city %>, <%= product.author.id.address %></p>
            <p>Описание: <%= product.description %></p>
            <div class="call">
                <a href="callto:<%= product.author.id.phone %>"><%= product.author.id.phone %></a>
                <a href="#"><img src="../svg/whatsapp.svg"></a>
                <a href="#"><img src="../svg/telegram.svg"></a>
            </div>
            <p>Поделиться:</p>
            <div class="share">
                <a href=""><img src="../svg/facebook.svg"></a>
                <a href=""><img src="../svg/vk.svg"></a>
                <a href=""><img src="../svg/email.svg"></a>
                <a href=""><img src="../svg/twitter.svg"></a>
            </div>
        </div>
    </div>
</div>


<div class="centered">
    <iframe src="https://maps.google.com/maps?q=<%= mapq %>&t=&z=15&ie=UTF8&iwloc=&output=embed" frameborder="0" style="border:0" allowfullscreen></iframe>
</div>


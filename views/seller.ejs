<% include ./partials/header %>

<div class="minibar" id="tool">
    <% if (!currentUser) { %>
        <a href="/login"><img src="../../../svg/signin.svg">Войти</a>
        <a href="/register"><img src="../../../svg/add-user.svg">Регистрация</a>
    <% } else { %>
        <a href="/admin"><img src="../../../svg/package.svg">Мои Товары</a>
        <a href="/products/new"><img src="../../../svg/add-item.svg">Новый Товар</a>
        <a href="/logout"><img src="../../../svg/logout.svg">Выйти</a>
    <% } %>
</div>

<div class="author">
    <img src="https://ecs7.tokopedia.net/img/cache/215-square/shops-1/2015/3/10/352686/352686_e288c276-c6fe-11e4-8f34-dca82523fab8.jpg">
    <div>
        <h1><%= author.title %></h1>
        <p><%= author.country %>, <%= author.city %>, <%= author.address %></p>
        <p><%= author.desc %></p>
        <p><a href="https://<%= author.website %>" target="_blank"><%= author.website %></a></p>
        <div class="call">
            <a href="callto:<%= author.phone %>"><%= author.phone %></a>
            <a target="_blank" href="https://api.whatsapp.com/send?phone=<%= author.phone.replace("+",""); %>"><img src="../svg/whatsapp.svg"></a>
            <a target="_blank" href="https://www.google.com/maps/place/<%= author.city %>,<%= author.address %>" class="butt">Показать на карте</a>
        </div>
    </div>
</div>

<div class="productsGrid">
    <% products.forEach(function(product) { %>
        <a class="product" href="/products/<%= product._id %>">
            <div class="productInfo">
                <div class="productImg" style="background: url(../<%= product.image[0] %>) center/cover no-repeat;"></div>
                <div class="productOverlay">
                    <p><%= product.name %></p>
                </div>
            </div>
            <p class="price"><%= product.price %>₸</p>
        </a>
    <% }); %>
</div>

<% include ./partials/footer %>